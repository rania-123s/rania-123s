{% extends 'base.html.twig' %}

{% block title %}Hello HospitalRaniaSelmiController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hospital List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Hospital Name</th>
                <th>Number of Rooms</th>
            </tr>
        </thead>
        <tbody>
            {% for hospital in hospitals %}
                <tr>
                    <td>{{ hospital.nomRaniaSelmi }}</td>
                    <td>{{ hospital.nbrchRaniaSelmi }}</td>
                    <td>
                        <a href="{{ path('app_deleteauthors', {'id': hospital.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">No hospitals found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
