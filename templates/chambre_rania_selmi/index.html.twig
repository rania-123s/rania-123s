{% extends 'base.html.twig' %}

{% block title %}Hello ChambreRaniaSelmiController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Chambre List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Chambre Name</th>
                <th>Number of Rooms</th>
            </tr>
        </thead>
        <tbody>
            {% for Chambre in chambres %}
                <tr>
                    <td>{{ Chambre.numchRaniaSelmi }}</td>
                    <td>{{ Chambre.patientRaniaSelmi }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">No Chambres found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
